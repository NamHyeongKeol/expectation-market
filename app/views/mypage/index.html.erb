<div class="container">
  <div class="row" style="text-align:center;">
    <div class="col-md-12">
     <h1 class="h1-responsive" style="margin-top:20px;">
       <strong>JEM and I<br>
         <small class="text-muted">내가 가지고 있는 캐시와 카드 내역을 확인해보세요!</small> <br>
       </strong>
     </h1>
    </div>
    <!--/.Page heading-->
      <hr>
      <ul class="nav nav-tabs" role="tablist">
          <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#panel1" role="tab">캐시</a>
          </li>
          <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#panel2" role="tab">팀 카드</a>
          </li>
      </ul>

      <!-- Tab panels -->
      <div class="tab-content">
          <!--Panel 1-->
          <div class="tab-pane active" id="panel1" role="tabpanel">
              <br>
              <!--Card-->
              <div class="card">
                  <!--Card content-->
                  <div class="card-block">
                      <!--Title-->
                      <h4 class="card-title" style="text-align:center;"><b>나의 캐시</b><br><hr>
                      <!--Text-->
                        <i class="fa fa-money" aria-hidden="true"></i>&nbsp;<b><%= current_user.coin %>원</b>
                      </h4>
                  </div>
                  <!--/.Card content-->
              </div>
              <!--/.Card-->
          </div>
       </div>
          <!--/.Panel 1-->
            <!--card column-->
             <div class="col-md-6">
                 <!--Card-->
                 <div class="card">
                     <!--Card image-->
                     <!-- <div class="view overlay hm-white-slight">
                         <img src="http://mdbootstrap.com/images/regular/city/img%20(14).jpg" class="img-fluid" alt="">
                         <a href="#!">
                             <div class="mask"></div>
                         </a>
                     </div> -->
                     <!--/.Card image-->
                     <!--Card content-->
                     <div class="card-block">
                         <!--Title-->
                         <h4 class="card-title"><b>구입한 카드 내역</b><hr></h4>
                         <!--Text-->
                         <table class="table-info table-hover" style="text-align:center;">
                           <thead class="thead-inverse">
                            <tr>
                               <th>발표순서</th>
                               <th>주제</th>
                               <th>판매가격</th>
                             </tr>
                            </thead>
                           
                            <tbody>
                            <% current_user.buy_orders.each do |b| %>
                              <% if b.is_complete %>
                              <tr>
                                <td><%= b.card.team_id %>팀</td>
                                <td><%= b.card.team.name %></td>
                                <td><%= b.price %>원</td>
                              </tr>
                              <% end %>
                            <% end %>
                           </tbody>
                         </table>
                         <!--<div class="read-more">
                             <a href="#!" class="btn btn-primary">카드 판매하러 가기(모달붙이기)</a>
                         </div>-->
                     </div>
                     <!--/.Card content-->
                 </div>
                 <!--/.Card-->
             </div>
          </div>
          <!--Panel 2-->
          <div class="tab-pane" id="panel2" role="tabpanel">
              <br>
             <!--Second column-->
             <div class="col-md-6">
                 <!--Card-->
                 <div class="card">
                     <!-- Card image-->
                     <!-- <div class="view overlay hm-white-slight">
                         <img src="http://mdbootstrap.com/images/regular/city/img%20(14).jpg" class="img-fluid" alt="">
                         <a href="#!">
                             <div class="mask"></div>
                         </a>
                     </div> -->
                     <!--/.Card image -->
                     <!--Card content-->
                     <div class="card-block">
                         <!--Title-->
                         <h4 class="card-title"><b>판매한 카드 내역</b><hr></h4>
                         <!--Text-->
                         <table class="table-info table-hover" style="text-align:center;">
                           <thead class="thead-inverse">
                            <tr>
                               <th>발표순서</th>
                               <th>주제</th>
                               <th>판매가격</th>
                               <th>판매완료</th>
                            </tr>
                           </thead>
                           
                            <tbody>
                            <% current_user.sell_orders.each do |s| %>
                              <tr>
                                <td><%= s.card.team_id %>팀</td>
                                <td><%= s.card.team.name %></td>
                                  <td><%= s.price %>원</td>
                                  <% if s.is_complete %>
                                    <td>완료<td>
                                  <% else %>
                                    <td></td>
                                  <% end %>                                
                              </tr>
                            <% end %>
                           </tbody>
                         </table>
                         <!--<div class="read-more">
                             <a href="#" class="btn btn-primary">카드 구매하러 가기(모달붙이기)</a>
                         </div>
                     </div>-->
                     <!--/.Card content-->
                 </div>
                 <!--/.Card-->
             </div>
             <!--/.Second column-->

             <!--Third column-->
             <div class="col-md-6">
                 <!--Card-->
                 <div class="card">
                     <!--Card image-->
                     <!-- <div class="view overlay hm-white-slight">
                         <img src="http://mdbootstrap.com/images/regular/city/img%20(14).jpg" class="img-fluid" alt="">
                         <a href="#!">
                             <div class="mask"></div>
                         </a>
                     </div> -->
                     <!--/.Card image-->
                     <!--Card content-->
                     <div class="card-block">
                         <!--Title-->
                         <h4 class="card-title"><b>나의 카드 보유내역</b><hr></h4>
                         <!--Text-->
                         <table class="table-info table-hover" style="text-align:center;">
                           <thead class="thead-inverse">
                            <tr>
                               <th>팀</th>
                               <th>주제</th>
                             </tr>
                            </thead>
                           
                            <tbody>
                            <% current_user.cards.order(:team_id).each do |c| %>
                              <tr>
                                <td><%= c.team_id %>팀</td>
                                <td><%= c.team.name %></td>
                              </tr>
                            <% end %>
                           </tbody>
                         </table>
                         <!--<div class="read-more">
                             <a href="#!" class="btn btn-primary">카드 판매하러 가기(모달붙이기)</a>
                         </div>-->
                     </div>
                     <!--/.Card content-->
                 </div>
                 <!--/.Card-->
             </div>
          </div>
          <!--/.Panel 2-->
      </div>
  </div>

<script>
$('#myTab a').click(function (e) {
  e.preventDefault()
  $(this).tab('show');
});
</script>
