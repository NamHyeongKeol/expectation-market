<div class="container">
  <!--Page heading-->
   <div class="row">
       <div class="col-md-12" style="margin-top:20px;">
           <h2 class="h1-responsive" style="text-align:center;">
             <strong>득표 결과를 공개하겠습니다!</strong><br>
               <small class="text-muted" style="text-align:center;">두구두구두구..</small><br>
               <button class="btn btn-lg btn-success" style="text-align:center;" data-toggle="collapse" data-target="#voteresult"><b>결과보러가기!</b></button>
           </h2>
       </div>
   </div><hr>
     <!--/.Page heading-->
    <div class="row">
     <div class="col-md-12" style="margin-top:20px;">
      <table class="table collapse" id="voteresult">
        <thead class="thead-inverse" style="text-align:center;">
          <tr>
            <th>팀 번호</th>
            <th>주제</th>
            <th>득표수</th>
            <th>득표율</th>
            <th>배당금(카드 1개당)</th>
          </tr>
        </thead>
        <tbody>
          <% @teams.each do |t| %>
          <tr>
            <th scope="row"><%= t.id %></th>
            <td><%= t.name %>
            <td><%= t.poll %></td>
            <td><%= t.poll * 100 / @total_poll %>%</td>
            <td><%= t.poll * 1000 / @total_poll  %>원</td>
          </tr>
          <% end %>
        </tbody>
        </table>
      <table>
        <thead class="thead-inverse" style="text-align:center;">
          <tr>
            <th>유저id</th>
            <th>유저이름</th>
            <th>팀1</th>
            <th>팀2</th>
            <th>팀3</th>
          </tr>
        </thead>
        <tbody>
          <% @votes.each do |v| %>
          <tr>
            <th scope="row"><%= v.user_id %></th>
            <td><%= v.user.name %>
            <td><%= v.team_1.name %></td>
            <td><%= v.team_2.name %></td>
            <td><%= v.team_3.name %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      
      <table>
        <thead class="thead-inverse" style="text-align:center;">
          <tr>
            <th>Order_id</th>
            <th>Team_id</th>
            <th>Buyer</th>
            <th>Seller</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |o| %>
          <tr>
            <th scope="row"><%= o.id %></th>
            <% unless o.buy_team.nil? %>
              <td><%= o.buy_team.name %></td>
            <% else %>
              <td>nil</td>
            <% end %>
            <% unless o.buyer.nil? %>
              <td><%= o.buyer.name %></td>
            <% else %>
              <td>nil</td>
            <% end %>
            <% unless o.seller.nil? %>
              <td><%= o.seller.name %></td>
            <% else %>
              <td>nil</td>
            <% end %>
            <td><%= o.price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>


      <hr>
